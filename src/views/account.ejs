<%- include("includes/head"); %>
<%- include("includes/nav", { activeMenu: "account" }); %>

<section class="container-lg pt-5">
  <%- include("includes/messages"); %>

  <div class="messages-profile"></div>

  <form method="post" action="/account/edit" class="form-profile">
    <div class="form-group">
      <label for="form-account-email">E-mail:</label>
      <input type="email" class="form-control" name="email" value="<%= email %>" id="form-account-email">
    </div>
    <div class="form-group">
      <label for="form-account-password">Nova Senha:</label>
      <input type="password" class="form-control" name="password" id="form-account-password">
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
  </form>
</section>

<%- include("includes/footer.ejs") %>
