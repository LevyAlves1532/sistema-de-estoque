<%- include("includes/head"); %>
<%- include("includes/nav", { activeMenu: "categories" }); %>

<div class="container-lg pt-5">
  <h4 class="text-center"><%= (!data) ? "Adicionar Nova Categoria" : "Edite a Categoria" %></h4>

  <form method="post" action="<%= (!data) ? "/categories/add/form" : `/categories/${data._id}/edit` %>" class="form-categories" class="mb-4">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="form-group">
      <label for="form-categories-name">Nome da Categoria:</label>
      <input type="text" class="form-control" name="name" id="form-categories-name" value="<%= (!data) ? "" : data.name %>">
    </div>
    <div class="form-group">
      <label for="form-categories-slug">Slug da Categoria:</label>
      <input type="text" class="form-control" readonly name="slug" id="form-categories-slug" value="<%= (!data) ? "" : data.slug %>">
    </div>
    <button type="submit" class="btn btn-success"><%= (!data) ? "Criar Nova Categoria" : "Salvar Alterações" %></button>
  </form>

  <%- include("includes/messages"); %>
</div>

<%- include("includes/footer.ejs") %>
